<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.intefor.chat">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">

        </activity>


        <activity android:name=".activities.RegActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".activities.ProfileActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name=".activities.ContactsActivity"
            android:label="@string/app_name">

        </activity>

        <activity android:name=".activities.ChatListActivity"
            android:label="@string/app_name">

        </activity>

        <activity android:name=".activities.ChatScreenActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">

        </activity>

        <activity android:name=".activities.TabMainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">


        </activity>
    </application>

</manifest>